#!/usr/bin/env bash

mkdir -p doc/notebook

# Convert qmd to jupyter notebook if not exist
for qmdfile in doc/qmd/*.qmd
do
    notebook=doc/notebook/$(basename $"${qmdfile%.*}").ipynb
    if [ ! -e $notebook ]; then
        quarto convert $qmdfile -o $notebook
    fi
done

# Start jupyter lab
bundle install --gemfile=$(dirname $0)/Gemfile

jupyter lab --notebook-dir='/workspaces/red_amber/doc/notebook' --NotebookApp.token=''
